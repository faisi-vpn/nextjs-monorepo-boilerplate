{
    "name": "nextjs-monorepo-boilerplate",
    "private": true,
    "version": "1.0.0",
    "workspaces": [
        "apps/*",
        "packages/config/*",
        "packages/shared/*"
    ],
    "scripts": {
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint",
        "dev:campus-management": "turbo run dev --filter=campus-management",
        "dev:frontend-college": "turbo run dev --filter=frontend-college",
        "format": "turbo run format"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {
        "sass": "^1.69.5",
        "turbo": "^1.11.2",
        "turborepo": "^0.0.1"
    }
}
